<h1> <%= link_to "#{@shelter.name}", "/shelters/#{@shelter.id}" %> </h1>
<p>Address: <%= @shelter.address %></p>
<p>City: <%= @shelter.city %></p>
<p>State: <%= @shelter.state %></p>
<p>Zip: <%= @shelter.zip %></p>
<br>
<h6> <%= link_to 'Shelter Pets', "/shelters/#{@shelter.id}/pets" %> </h6>
<h6> <%= link_to 'Update Shelter', "/shelters/#{@shelter.id}/edit" %> </h6>
<h6> <%= link_to 'Delete Shelter', "/shelters/#{@shelter.id}", method: :delete %> </h6>
<h2>Reviews</h2>
<% @shelter.reviews.each do |review| %>
  <%= review.title %>
  <%= review.rating %>
  <%= review.content %>
  <img src= <%= review.picture %>> </img>
<% end %>
