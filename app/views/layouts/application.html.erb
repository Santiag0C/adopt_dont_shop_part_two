<!DOCTYPE html>
<html>
  <head>
    <title>AdoptDontShop</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
  </head>

  <body>
    <nav>
      <%= link_to 'Home', '/' %>
      <%= link_to 'Shelters', '/shelters' %>
      <%= link_to 'Pets', '/pets' %>
      <%= link_to "Favorites: #{favorites.total_count}", "/favorites", method: :get %>
    </nav>

    <% flash.each do |type, message| %>
      <h3><%= message %></h3>
    <% end %>
    <%= yield %>
  </body>
</html>
