<h1>Edit Review</h1>

  <%= form_tag "/shelters/#{@shelter.id}/reviews/#{@review.id}", method: :patch do %>
  
    <%= label_tag :title %>
    <%= text_field_tag :title, nil, placeholder: "#{@review.title}" %>

    <%= label_tag :rating %>
    <%= number_field_tag :rating, nil, placeholder: "#{@review.rating}" %>

    <%= label_tag :content %>
    <%= text_field_tag :content, nil, placeholder: "#{@review.content}" %>

    <%= label_tag :picture %>
    <%= text_field_tag :picture, nil, placeholder: "#{@review.picture}"%>

    <%= submit_tag 'Submit' %>
  <% end %>
